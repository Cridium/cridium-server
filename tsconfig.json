{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": "./",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "declaration": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2017",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": { "src": ["src"] } // tsc-alias require explicit paths for path replacing
  },
  "include": ["src/**/*.ts"],
  "ts-node": { "files": true },
  "reflection": true // enable runtime type reflection by @deepkit/type
}
