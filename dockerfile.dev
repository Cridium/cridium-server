FROM node:16

WORKDIR /app

COPY . .
RUN npm install


EXPOSE 8080
ENV APP_FRAMEWORK_DEBUG=true
ENV APP_FRAMEWORK_PORT=8080
ENV APP_FRAMEWORK_MIGRATE_ON_STARTUP=false
ENV APP_DATABASE_URL=data/db.sqlite3
ENV APP_DATABASE_LOGGING=true
ENV APP_JWT_SECRET=any-string
ENV APP_FILE_ENGINE_NAME=local
ENV APP_FILE_ENGINE_OPTIONS='{ "root": "data" }'
CMD npm run dev
